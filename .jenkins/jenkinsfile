pipeline {
    agent any

    environment {
        // Define environment variables
        ECR_REPOSITORY = credentials('ECR_REPOSITORY')
        AWS_ACCOUNT_ID = credentials('AWS_ACCOUNT_ID')
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        VENV_PATH = '/home/ubuntu/awscli-venv' // Define the path to the virtual environment
    }

    stages {
        stage('Continous Integration') {
            steps {
                script {
                    // Perform linting and unit tests
                    echo "Linting repository"
                    echo "Running unit tests"
                }
            }
        }

        stage('Setup Virtual Environment') {
            steps {
                script {
                    // Grant execute permission to the Python interpreter in the virtual environment
                    sh 'chmod +x ${VENV_PATH}/bin/python'
                }
            }
        }

        stage('Login to ECR') {
            steps {
                script {
                    // Activate the virtual environment and run AWS CLI commands
                    sh "source ${VENV_PATH}/bin/activate && aws ecr get-login-password --region ap-south-1 | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID} && deactivate"
                }
            }
        }
        
        stage('Build Image') {
            steps {
                script {
                    // Build the Docker image
                    sh 'docker build -t ${ECR_REPOSITORY}:latest .'
                }
            }
        }

        stage('Push Image') {
            steps {
                script {
                    // Push the Docker image to ECR
                    sh 'docker push ${ECR_REPOSITORY}:latest'
                }
            }
        }

        stage('Continous Deployment') {
            steps {
                sshagent(['ssh_key']) {
                    script {
                        // Perform continuous deployment
                        sh "ssh -o StrictHostKeyChecking=no -l ubuntu 13.235.235.214 'cd /home/ubuntu/ && wget https://github.com/Chetand777/End-to-End-Object-Detection/raw/main/docker-compose.yml && export IMAGE_NAME=${ECR_REPOSITORY}:latest && source ${VENV_PATH}/bin/activate && aws ecr get-login-password --region ap-south-1 | docker login --username AWS --password-stdin ${AWS_ACCOUNT_ID}.dkr.ecr.ap-south-1.amazonaws.com && docker compose up -d && deactivate'"
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean up Docker resources
            sh 'docker system prune -f'
        }
    }
}
